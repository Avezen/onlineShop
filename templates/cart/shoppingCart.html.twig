
{% if not shoppingCart %}

    Koszyk pusty

{% else %}
    {% set i = 0 %}
    {% for shoppingCartItem in shoppingCart %}
        <div class="cartItem">

            {{ shoppingCartItem.item }}<br>
            Ilość:{{ shoppingCartItem.quantity }}
            Rozmiar:{{ shoppingCartItem.size }}<br>
            {{ shoppingCartItem.color }}<br>
            {{ shoppingCartItem.price*shoppingCartItem.quantity }}<br><br>
        </div>
        <button onclick="deleteItemFromCart({{ i }})">Usuń</button>
        {% set i = i + 1 %}
    {% endfor %}
    <br><br>
    Suma: {{ app.session.get('cartPrice') }}
    <br>
    <button onclick="clearCart()">Opróżnij koszyk</button>
    <a href="{{ path('makingOrder') }}"><button>Przejdź do zamówienia</button></a>

{% endif %}



