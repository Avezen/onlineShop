<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
            <link href="{{ asset('build/css/mainpage.css') }}" rel="stylesheet" >
            <link href="{{ asset('build/css/modal.css') }}" rel="stylesheet" >
            <link href="https://fonts.googleapis.com/css?family=Eczar|Montserrat" rel="stylesheet">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        {% endblock %}
    </head>

    <body id="body">
        <div class="background-image"></div>
        <main>

        {% block header %}
            <div class="logo">
                <a href="{{ path('main') }}"></a>
            </div>
            <header id="header">

                <div class="header-background"></div>
                <nav class="navbar navbar-expand-lg" id="navbarExpandLg" style="padding-left: 5%;">

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-reorder"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul>
                            <li>
                                <a class="nav-bar-text-button" href="#">Nowości</a>
                            </li>
                            <li>
                                <a class="nav-bar-text-button" href="#">Popularne</a>
                            </li>
                            <li class="nav-item dropdown" style="border-right: solid 0px">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Kategorie
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="{{ path('productsCategory', {'category':'T-Shirt'}) }}">T-shirt</a>
                                    <a class="dropdown-item" href="{{ path('productsCategory', {'category':'Hoodie'}) }}">Hoodie</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{ path('main') }}">Wszystkie</a>
                                </div>
                            </li>
                            {% if is_granted("ROLE_ADMIN") %}
                                <li style="border-left: solid 1px deepskyblue; border-right: solid 0px; margin-left:-5px; padding-left:10px">
                                    <a class="nav-bar-text-button" href="{{ path('admin_panel') }}" >Panel Admina</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                    <div class="right-nav-bar">
                            <div class="circle">
                                <a class="nav-bar-circle-button" id="showCart" href=""><i class="fa fa-cart-arrow-down"></i></a>
                            </div>
                            <div class="login-form" id="loginform" style="display: none">
                                <a class="nav-bar-circle-button" id="login" href="">Zaloguj się</a>
                                <a class="nav-bar-circle-button" id="login" href="">Zaloguj się</a>
                            </div>

                            <div class="circle" style="margin-right: 20px" >
                                <a class="nav-bar-circle-button" id="userPanel" href=""><i style="padding-left: 5px" class="fa fa-user-o"></i></a>
                            </div>


                    </div>
                </nav>

                <div id="underline" class="nav-underline"></div>
            </header>
        {% endblock %}

        {% block body %}

        {% endblock %}
            <div class="shopppingCart" id="shoppingCart" style="display: none;"></div>
            </div>

            <div id="myModal" class="modal">
                <!-- Modal content -->
                <div id="modal-content" class="modal-content">
                </div>

            </div>
         </main>
        </body>
        {% block footer %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>



        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/base.js') }}"></script>
        {% endblock %}

</html>
